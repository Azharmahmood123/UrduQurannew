<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="2"
    android:orientation="vertical"
    android:layout_gravity="center"

    tools:context="com.packageapp.HomeScreen3">

    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:splitMotionEvents="false"
        android:gravity="center"
        android:weightSum="3">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/btn_about"
            android:clickable="true"
            android:onClick="homeClickEvent">

            <ImageView
                android:layout_width="@dimen/size_eighty"
                android:layout_height="@dimen/size_eighty"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/size_ten"
                android:background="@drawable/icon11" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="About Us"
                android:textSize="@dimen/text_size_sixteen"
                android:id="@+id/tv13"
                android:gravity="center"
                android:textColor="@color/black"
                />
        </LinearLayout>

    </LinearLayout>
    <!--This is dummy layout to adjust placement of the -->
        <LinearLayout
            android:id="@+id/linearlayout2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
           >
    </LinearLayout>

</LinearLayout>