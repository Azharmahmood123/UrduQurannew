<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_bg_quranvocabulary">

    <View
        android:id="@+id/view"
        android:layout_width="@dimen/size_one"
        android:layout_height="@dimen/size_one"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        android:background="@android:color/transparent" />

    <ImageView
        android:layout_width="@dimen/size_hundred_sixty"
        android:layout_height="@dimen/size_two_hundred"
        android:layout_above="@id/view"
        android:layout_centerHorizontal="true"
        android:src="@drawable/splash_icon" />

    <ImageView
        android:layout_width="@dimen/size_hundred"
        android:layout_height="@dimen/size_thirty_five"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/splash_qr" />

</RelativeLayout>