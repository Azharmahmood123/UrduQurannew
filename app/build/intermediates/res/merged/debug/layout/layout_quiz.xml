<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:splitMotionEvents="false"

    android:layout_height="match_parent" android:weightSum="10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:clickable="false"
        android:layout_gravity="center"
        android:gravity="center"
      >

        <TextView
            android:id="@+id/quiz_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="هَذَا"
            android:padding="@dimen/size_ten"
            android:background="@drawable/quiz_word_border"
            android:textSize="@dimen/size_fourty_eight"
            android:textColor="@color/black"
            android:clickable="false"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:splitMotionEvents="false">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray"/>

        <TextView
            android:id="@+id/quiz_option1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/drawer_item_selector"
            android:textSize="@dimen/text_size_twenty"
            android:padding="@dimen/size_ten"
            android:text="Take Another Quiz"
            android:textColor="@color/black"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray"/>

        <TextView
            android:id="@+id/quiz_option2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/drawer_item_selector"
            android:textSize="@dimen/text_size_twenty"
            android:padding="@dimen/size_ten"
            android:text="Take Another Quiz"
            android:textColor="@color/black"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray"/>
        <TextView
            android:id="@+id/quiz_option3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/drawer_item_selector"
            android:textSize="@dimen/text_size_twenty"
            android:padding="@dimen/size_ten"
            android:text="Take Another Quiz"
            android:textColor="@color/black"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray"/>
        <TextView
            android:id="@+id/quiz_option4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/drawer_item_selector"
            android:padding="@dimen/size_ten"
            android:textSize="@dimen/text_size_twenty"
            android:text="Take Another Quiz"
            android:textColor="@color/black"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray"/>
    </LinearLayout>

    <TextView
        android:id="@+id/quiz_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question 1 of 15"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_sixteen"/>
</LinearLayout>