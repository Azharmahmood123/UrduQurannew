<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:activatedBackgroundIndicator">@drawable/bookmark_selection_color</item>
    </style>
    <style name="footerView">
        <item name="android:layout_height">@dimen/size_three</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/header_bg</item>
    </style>

    <style name="detail_tab_separator">
        <item name="android:layout_height">@dimen/size_three</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="Mytab" >
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_eighteen</item>
        <item name="android:textStyle">normal</item>
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="brown_line">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/size_four</item>
        <item name="android:background">@color/brown</item>
    </style>
    <style name="white_line">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/size_four</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="settings_stroke_line">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/size_one</item>
        <item name="android:background">#E3E3E3</item>
    </style>

    <style name="settings_btn_stroke_line">
        <item name="android:layout_width">@dimen/size_five</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="settings_btn_stroke_line_two">
        <item name="android:layout_width">@dimen/size_ten</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="home_btn_horizontal_line">
        <item name="android:layout_height">@dimen/size_ten</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">#093768</item>
    </style>

    <style name="settng_separator">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">2dp</item>
        <item name="android:background">@drawable/settng_separator</item>
    </style>

    <style name="side_menu_shadow">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">@dimen/size_three</item>
        <item name="android:background">@drawable/menu_shadow</item>
    </style>

    <style name="side_secondary_menu_shadow">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">@dimen/size_three</item>
        <item name="android:background">@drawable/secondary_menu_shadow</item>
    </style>

    <style name="shadow_bg">
        <item name="android:layout_width">@dimen/size_eight</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@drawable/side_shadow</item>
    </style>

    <style name="bookmark_seprtr_v">
        <item name="android:layout_width">@dimen/size_two</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">#C0C0C0</item>
    </style>

    <style name="bookmark_seprtr_h">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/size_two</item>
        <item name="android:background">#C0C0C0</item>
    </style>

    <style name="bookmark_line">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/size_two</item>
        <item name="android:background">#1E72DC</item>
        <item name="android:layout_marginTop">@dimen/size_three</item>
    </style>

    <style name="Transparent" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <!-- ************************ ActionBar ************************ -->


    <!-- ActionBar styles -->
    <style name="customActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:titleTextStyle">@style/customActionBarTitleText</item>
        <item name="android:background">@color/header_bg</item>

        <!-- Support library compatibility -->
        <item name="titleTextStyle">@style/customActionBarTitleText</item>
        <item name="background">@color/header_bg</item>
    </style>

    <!-- ActionBar title text -->
    <style name="customActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">@dimen/size_twenty</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>



</resources>
