<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/size_fifteen"
    android:paddingBottom="@dimen/size_fifteen"
    android:layout_height="@dimen/size_hundred_eighty"
    android:background="@drawable/drawer_header" >

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="@string/app_name_QuranVocabulary"
        android:layout_alignParentBottom="true"
        android:paddingTop="@dimen/size_ten"
        android:paddingBottom="@dimen/size_ten"
        android:textSize="@dimen/text_size_twenty_four"
        android:textStyle="normal" />

    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="@dimen/size_eighty"
        android:layout_height="@dimen/size_eighty"
        android:layout_above="@id/app_name"
        android:src="@drawable/drawer_icon" />

</RelativeLayout>