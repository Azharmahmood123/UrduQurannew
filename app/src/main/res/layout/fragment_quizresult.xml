<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal" >

    <!--<View
        android:id="@+id/result_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_one"
        android:layout_marginTop="@dimen/size_thirty"
        android:background="@android:color/transparent"
        android:layout_centerInParent="true"/>-->

    <TextView
        android:id="@+id/result_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/actionbar_color"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:textSize="@dimen/text_size_twenty_five"
        android:text="Result"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/result_txt">

        <ImageView
            android:id="@+id/result_icon"
            android:layout_width="@dimen/size_hundred_thirty"
            android:layout_height="@dimen/size_hundred_thirty"
            android:src="@drawable/icon3"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/size_thirty" />

    </RelativeLayout>


    <TextView
        android:id="@+id/result_txt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/light_black"
        android:gravity="center"
        android:paddingTop="@dimen/size_fifteen"
        android:paddingBottom="@dimen/size_fifteen"
        android:layout_below="@id/result_txt"
        android:textSize="@dimen/text_size_twenty"
        android:text="5 out of 15 answers were correct.\n5 answers were wrong"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/result_txt2"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/light_gray"/>
        <TextView
            android:id="@+id/take_quiz_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/light_black"
            android:background="@drawable/drawer_item_selector"
            android:gravity="center"
            android:paddingTop="@dimen/size_ten"
            android:paddingBottom="@dimen/size_ten"
            android:textSize="@dimen/text_size_twenty_five"
            android:text="Take another Quiz" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/light_gray"/>
        <TextView
            android:id="@+id/go_back_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/light_black"
            android:background="@drawable/drawer_item_selector"
            android:gravity="center"
            android:paddingTop="@dimen/size_ten"
            android:paddingBottom="@dimen/size_ten"
            android:textSize="@dimen/text_size_twenty_four"
            android:text="Go Back" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/light_gray"/>
    </LinearLayout>




</RelativeLayout>