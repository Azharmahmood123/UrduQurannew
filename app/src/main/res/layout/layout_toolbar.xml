<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_fifty_five"
    android:background="@color/header_bg"
    android:gravity="center_vertical"
    android:splitMotionEvents="false"
    android:id="@+id/toolbar"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:elevation="0dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/toolbar_Quiz"
        android:layout_width="@dimen/size_fourty"
        android:layout_height="@dimen/size_fourty"
        android:paddingBottom="@dimen/size_five"
        android:paddingTop="@dimen/size_five"
        android:layout_gravity="center_vertical"
        android:paddingRight="@dimen/size_five"
        android:layout_centerVertical="true"
        android:visibility="visible"
        android:layout_alignParentRight="true"
        android:src="@drawable/quiz"

        android:background="@drawable/toolbar_hover" />
        <ImageView
            android:id="@+id/btnHomeVocab"
            android:layout_width="@dimen/size_fourty_eight"
            android:layout_height="@dimen/size_fourty_eight"
            android:layout_toLeftOf="@id/toolbar_Quiz"
            android:onClick="onHomeClickVocab"
            android:layout_centerVertical="true"
            android:src="@drawable/bg_home"
            android:layout_marginRight="@dimen/size_five"
            />

    <ImageView
        android:id="@+id/toolbar_icon"
        android:layout_width="@dimen/size_sixty"
        android:layout_height="@dimen/size_fifty_five"
        android:layout_gravity="center_vertical|right"
        android:background="@drawable/toolbar_hover"
        android:layout_alignParentRight="true"
        android:paddingRight="@dimen/size_fifteen"
        android:paddingLeft="@dimen/size_fifteen"
        android:visibility="gone" />

    <TextView
        android:id="@+id/toolbar_title"
      android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/app_name_QuranVocabulary"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_twenty"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:focusable="true"
        android:layout_toLeftOf="@id/toolbar_icon"
        android:focusableInTouchMode="true"
        android:freezesText="true"

         />
    </RelativeLayout>

</android.support.v7.widget.Toolbar>